.container-fluid
  %center
    Zadanie drugie - metoda simplex
  %hr
  %center
    =form_tag(calculation_path, method: :post) do
      %table
        %tr
          %th{:rowspan => "2"}
          %th{:colspan => "3"} 
            %center
              Jednostkowe normy czasu pracy maszyn w min
        %tr
          %td 
            %center wydział1
          %td 
            %center wydział2
          %td 
            %center wydział3
        %tr
          .form-group
            %td= label_tag 'produkt1'
            %td= number_field_tag :x1, '', step: '1', class: 'form-control'
            %td= number_field_tag :x2, '', step: '1', class: 'form-control'
            %td= number_field_tag :x3, '', step: '1', class: 'form-control'
        %tr
          .form-group
            %td= label_tag 'produkt2'
            %td= number_field_tag :y1, '', step: '1', class: 'form-control'
            %td= number_field_tag :y2, '', step: '1', class: 'form-control' 
            %td= number_field_tag :y3, '', step: '1', class: 'form-control'
        %tr
          .form-group
            %td= label_tag 'produkt3'
            %td= number_field_tag :z1, '', step: '1', class: 'form-control'
            %td= number_field_tag :z2, '', step: '1', class: 'form-control' 
            %td= number_field_tag :z3, '', step: '1', class: 'form-control'
        %tr
          .form-group
            %td= label_tag 'zasób czasu pracy'
            %td= number_field_tag :a1, '', step: '1', class: 'form-control'
            %td= number_field_tag :a2, '', step: '1', class: 'form-control' 
            %td= number_field_tag :a3, '', step: '1', class: 'form-control'
      %br
      .row
        .col-lg-3

        .col-lg-2
          =number_field_tag :zysk1, '', step: '1', class: 'form-control'
        .col-lg-2
          =number_field_tag :zysk2, '', step: '1', class: 'form-control'
        .col-lg-2
          =number_field_tag :zysk3, '', step: '1', class: 'form-control'
        .col-lg-3
      %br
      .row
        .col-lg-5
        .col-lg-2
          =select_tag :min_max, options_for_select([["max"], ["min"]]), class: 'form-control'
        .col-lg-5
      %br
      =button_tag 'Dalej', class: "btn btn-primary"

.container-fluid
  %center
    Zadanie drugie - metoda simplex
  %hr
  %center
    =form_tag(calculation_path, method: :post) do
      %table
        %tr
          %th{:rowspan => "2"}
          %th{:colspan => "3"} 
            %center
              Jednostkowe normy czasu pracy maszyn w min
        %tr
          %td 
            %center wydział1
          %td 
            %center wydział2
          %td 
            %center wydział3
        %tr
          .form-group
            %td= label_tag 'produkt1'
            %td= number_field_tag :x1, params[:x1], step: '1', class: 'form-control'
            %td= number_field_tag :x2, params[:x2], step: '1', class: 'form-control'
            %td= number_field_tag :x3, params[:x3], step: '1', class: 'form-control'
        %tr
          .form-group
            %td= label_tag 'produkt2'
            %td= number_field_tag :y1, params[:y1], step: '1', class: 'form-control'
            %td= number_field_tag :y2, params[:y2], step: '1', class: 'form-control' 
            %td= number_field_tag :y3, params[:y3], step: '1', class: 'form-control'
        %tr
          .form-group
            %td= label_tag 'produkt3'
            %td= number_field_tag :z1, params[:z1], step: '1', class: 'form-control'
            %td= number_field_tag :z2, params[:z2], step: '1', class: 'form-control' 
            %td= number_field_tag :z3, params[:z3], step: '1', class: 'form-control'
        %tr
          .form-group
            %td= label_tag 'zasób czasu pracy'
            %td= number_field_tag :a1, params[:a1], step: '1', class: 'form-control'
            %td= number_field_tag :a2, params[:a2], step: '1', class: 'form-control' 
            %td= number_field_tag :a3, params[:a3], step: '1', class: 'form-control'
      %br
      .row
        .col-lg-3

        .col-lg-2
          =number_field_tag :gain1, params[:gain1], step: '1', class: 'form-control'
        .col-lg-2
          =number_field_tag :gain2, params[:gain2], step: '1', class: 'form-control'
        .col-lg-2
          =number_field_tag :gain3, params[:gain3], step: '1', class: 'form-control'
        .col-lg-3
      %br
      .row
        .col-lg-5
        .col-lg-2
          =select_tag :min_max, options_for_select([["max"], ["max"]]), class: 'form-control'
        .col-lg-5
      %br
      =button_tag 'Dalej', class: "btn btn-primary"
